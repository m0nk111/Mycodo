# Example .env file for Mycodo
# Copy this to .env and customize for your environment

# Environment (development, production, testing)
MYCODO_ENVIRONMENT=development
MYCODO_DEBUG=false

# Web Server
MYCODO_HOST=0.0.0.0
MYCODO_PORT=5000
MYCODO_WORKERS=4

# Database
MYCODO_DB_DRIVER=sqlite
MYCODO_DB_NAME=mycodo.db
# For PostgreSQL:
# MYCODO_DB_DRIVER=postgresql
# MYCODO_DB_HOST=localhost
# MYCODO_DB_PORT=5432
# MYCODO_DB_USER=mycodo
# MYCODO_DB_PASSWORD=your_password_here

# InfluxDB (Time-series data)
MYCODO_INFLUXDB_ENABLED=true
MYCODO_INFLUXDB_HOST=localhost
MYCODO_INFLUXDB_PORT=8086
MYCODO_INFLUXDB_DATABASE=mycodo
# For InfluxDB 2.x:
# MYCODO_INFLUXDB_VERSION=2
# MYCODO_INFLUXDB_ORG=mycodo
# MYCODO_INFLUXDB_TOKEN=your_token_here
# MYCODO_INFLUXDB_BUCKET=mycodo

# Redis (Event Bus & Caching)
MYCODO_REDIS_ENABLED=false
MYCODO_REDIS_HOST=localhost
MYCODO_REDIS_PORT=6379
# MYCODO_REDIS_PASSWORD=your_password_here

# Logging
MYCODO_LOG_LEVEL=INFO
MYCODO_LOG_FILE_ENABLED=true
MYCODO_LOG_FILE_PATH=logs/mycodo.log
MYCODO_LOG_STRUCTURED=false

# Security
MYCODO_SECURITY_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_TO_RANDOM_STRING
MYCODO_SECURITY_JWT_EXPIRY_HOURS=24
MYCODO_SECURITY_PASSWORD_MIN_LENGTH=8

# CORS (for API access from frontend)
MYCODO_SECURITY_CORS_ENABLED=true
MYCODO_SECURITY_CORS_ORIGINS=["http://localhost:3000","http://localhost:5000"]

# Docker
MYCODO_DOCKER_CONTAINER=false
