# Coverage configuration for Mycodo
[run]
source = mycodo
branch = True
omit = 
    */tests/*
    */migrations/*
    */scripts/*
    */__pycache__/*
    */site-packages/*
    */dist-packages/*
    */config_translations*.py
    */babel.cfg

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
